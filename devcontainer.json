{
    "name": "My Codespace",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:latest",
    "ports": ["3306", "8000"],
    "env": {
      "MYSQL_ROOT_PASSWORD": "root"
    },
    "features": {
      "mysql": {
        "image": "mysql:8.0",
        "mount": {
          "source": "/data",
          "target": "/var/lib/mysql"
        }
      }
    }
  }
